{
  "name": "the-chain-genius",
  "version": "0.0.1",
  "description": "The Chain Genius",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "build": "turbo build",
    "start": "turbo start",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "cache:clean": "turbo cache:clean && rm -rf .turbo",
    "website:dev": "turbo dev --filter=website",
    "website:lint": "turbo lint --filter=website",
    "website:build": "turbo build --filter=website",
    "website:start": "turbo start --filter=website",
    "website:clean": "turbo clean --filter=website",
    "portfolio:dev": "turbo dev --filter=portfolio",
    "portfolio:lint": "turbo lint --filter=portfolio",
    "portfolio:build": "turbo build --filter=portfolio",
    "portfolio:start": "turbo start --filter=portfolio",
    "portfolio:clean": "turbo clean --filter=portfolio",
    "gen-icons": "turbo gen-icons --filter=core",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "eslint": "8.57.0",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "2.1.1",
    "typescript-config": "workspace:*"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  }
}
